{
  "name": "wire-elements/modal",
  "description": "Laravel Livewire modal component",
  "keywords": [
    "laravel",
    "modal",
    "livewire"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Philo Hermans",
      "email": "me@philohermans.com"
    }
  ],
  "require-dev": {
    "orchestra/testbench": "^8.5.10",
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "extra": {
    "laravel": {
      "providers": [
        "LivewireUI\\Modal\\LivewireModalServiceProvider"
      ]
    }
  },
  "require": {
    "php": "^8.2",
    "livewire/livewire": "^2.0",
    "spatie/laravel-package-tools": "^1.15"
  },
  "autoload": {
    "psr-4": {
      "LivewireUI\\Modal\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LivewireUI\\Modal\\Tests\\": "tests"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
